@model Blog.Query.Models.Post.PostComment

<div class="col-md-10 col-sm-10 comment-container">
    <div class="panel panel-default arrow left">
        <div class="panel-heading">
            @if (Context.User.Identity.IsAuthenticated)
            {
                <div class="pull-right">
                    @using (Html.BeginForm("DeleteComment", "Post", new {id = Model.Id}))
                    {
                        <a href="#" class="delete-comment-link"><i class="fa fa-remove"></i> Usuń komentarz</a>
                    }
                </div>
            }
        </div>
        <div class="panel-body">
            <header class="text-left">
                <div class="comment-user"><i class="fa fa-user"></i> @Model.Author</div>
                <time class="comment-date"><i class="fa fa-clock-o"></i> @Model.CommentDate.ToString("dd.MM.yyyy HH:mm")</time>
            </header>
            <div class="comment-post">
                <p>
                    @Model.Content
                </p>
            </div>
        </div>
    </div>
</div>